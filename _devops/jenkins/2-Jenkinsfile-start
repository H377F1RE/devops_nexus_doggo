pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo_nexus'
        REGISTRY = "localhost:5000"
    }

    stages {
        stage('Prepare WS') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose down || true'
                    cleanWs()
                }
            }
        }

        stage('Checkout') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
            }
        }
        
        stage('Docker Login') {
            steps {
                sh """
                    echo 'user' | docker login ${REGISTRY} -u user --password-stdin
                """
            }
        }

        stage('Pull images from Nexus') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker-compose pull'
                }
            }
        }

        stage('Compose Up') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose up -d'
                }
            }
        }
    }

    post {
        always {
            sh "docker logout ${REGISTRY}"
        }
    }
}
