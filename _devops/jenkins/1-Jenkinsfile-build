pipeline {
    agent any
    
    options {
        skipDefaultCheckout(true)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo_nexus'

        REGISTRY = "localhost:5000"
        IMAGE_RANDOM = "doggo-random-service"
        IMAGE_RATING = "doggo-rating-service"
        VERSION = "latest"
    }

    stages {
        stage('Prepare WS') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose down || true'
                    cleanWs()
                }
            }
        }

        stage('Checkout') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
            }
        }

        stage('Docker Login') {
            steps {
                sh """
                    echo 'user' | docker login ${REGISTRY} -u user --password-stdin
                """
            }
        }

        stage('Build DogRandomService') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker build -t ${IMAGE_RANDOM} ${SHARED_WS}/DogRandomService'
                }
            }
        }

        stage('Build DogRatingService') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker build -t ${IMAGE_RATING} ${SHARED_WS}/DogRatingService'
                }
            }
        }

        stage('Push images to Nexus') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        docker push ${REGISTRY}/${IMAGE_RANDOM}:${VERSION}
                        docker push ${REGISTRY}/${IMAGE_RATING}:${VERSION}
                    """
                }
            }
        }

        stage('Remove local images') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        docker rmi ${IMAGE_RANDOM} || true
                        docker rmi ${IMAGE_RATING} || true
                    """
                }
            }
        }

        stage('Pull images from Nexus') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker-compose pull'
                }
            }
        }

        stage('Compose Up') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose up -d'
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout ${REGISTRY}'
        }
    }
}
